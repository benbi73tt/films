<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.catalog.films.controller.AddFilm"
            maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="457.0"
            prefWidth="388.0">

    <ComboBox fx:id="nameBox" layoutX="150.0" layoutY="30.0" prefHeight="35.0" prefWidth="200.0"/>
    <TextField fx:id="ratingField" layoutX="150.0" layoutY="90.0" prefHeight="35.0" prefWidth="200.0"/>
    <ComboBox fx:id="genreBox" layoutX="150.0" layoutY="150.0" prefHeight="35.0" prefWidth="200.0"/>
